{{#select-box
  class-prefix="filter-select"
  value=value
  on-click-outside=(action "close")
  on-press-escape=(action "close")
  on-search=on-search
  on-select=(action "selected" on-select)
  label-key="name"
  search-min-chars=0
  search-delay-time=0 as |sb|}}
  {{sb.input click=sb.open on-input=sb.open}}
  {{#if sb.isOpen}}
    {{#sb.options}}
      {{yield sb}}
    {{/sb.options}}
  {{/if}}
{{/select-box}}