<SelectBox
  @classNamePrefix="filter-select"
  @value={{@value}}
  @labelKey="name"
  @searchMinChars={{0}}
  @searchDelayTime={{0}}
  @onSearch={{@onSearch}}
  @onClickOutside={{action "close"}}
  @onPressEscape={{action "close"}}
  @onSelect={{action "selected" @onSelect}} as |sb|>
  <sb.input @click={{sb.open}} @onInput={{sb.open}} />
  {{#if sb.isOpen}}
    <sb.options>
      {{yield sb}}
    </sb.options>
  {{/if}}
</SelectBox>