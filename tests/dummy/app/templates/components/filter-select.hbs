<SelectBox
  @classNamePrefix="filter-select"
  @value={{@value}}
  @searchMinChars={{0}}
  @searchDelayTime={{0}}
  @onSearch={{@onSearch}}
  @onClickOutside={{this.close}}
  @onPressEscape={{this.close}}
  @onSelect={{fn this.select @onSelect}}
  ...attributes as |sb|
>
  <sb.Input {{on "click" sb.open}} @onInput={{sb.open}} />
  {{#if sb.isOpen}}
    <sb.Options>
      {{yield sb}}
    </sb.Options>
  {{/if}}
</SelectBox>