<SelectBox
  class="search-select"
  @onFocusLeave={{this.handleFocusLeave}}
  @onSearch={{@onSearch}}
  @onSearched={{this.handleSearched}}
  @onSelect={{this.handleSelect}}
  @value={{@value}}
  ...attributes as |sb|
>
  {{#unless sb.value}}
    <sb.Input />
  {{/unless}}

  {{yield sb this.results}}
</SelectBox>