{{! template-lint-disable no-inline-styles }}

<SelectBox
  @classNamePrefix="colour-select"
  @value={{@value}}
  @onSelect={{@onSelect}}
  @onClickOutside={{action "close"}}
  @onPressEscape={{action "close"}} as |sb|>

  <sb.SelectedOption
    onclick={{sb.open}}
    style={{style (concat "background:" sb.value)}}
    @value={{sb.value}} />

  {{#if sb.isOpen}}
    <sb.Options>
      {{~#each this.colours as |colour|~}}
        <sb.Option @value={{colour}} style={{style (concat "background:" colour)}} />
      {{~/each~}}
    </sb.Options>
  {{/if}}

</SelectBox>