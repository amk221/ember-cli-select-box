<SelectBox
  @classNamePrefix="colour-select"
  @value={{@value}}
  @onSelect={{@onSelect}}
  @onClickOutside={{action "close"}}
  @onPressEscape={{action "close"}} as |sb|>

  <sb.SelectedOption
    @style={{concat "background:" sb.value}}
    @click={{sb.open}}
    @value={{sb.value}} />

  {{#if sb.isOpen}}
    <sb.Options>
      {{~#each this.colours as |colour|~}}
        <sb.Option @value={{colour}} @style={{concat "background:" colour}} />
      {{~/each~}}
    </sb.Options>
  {{/if}}

</SelectBox>