<SelectBox
  @classNamePrefix="search-select"
  @value={{@value}}
  @searchSlowTime={{500}}
  @onSelect={{@onSelect}}
  @onSearch={{@onSearch}}
  @onSearched={{action "searched"}}
  @onPressEscape={{action "close"}}
  @onClickOutside={{action "close"}} as |sb|>
  <sb.input />
  {{#if sb.isSearching}}
    <sb.option>
      Please wait...
      {{if sb.isSlowSearch "(hold tight!)"}}
    </sb.option>
  {{else if sb.isOpen}}
    <sb.options>
      {{yield sb this.lastQuery}}
    </sb.options>
  {{/if}}
</SelectBox>