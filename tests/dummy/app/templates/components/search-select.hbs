{{#select-box
  class-prefix='search-select'
  value=value
  on-press-escape=(action 'close')
  on-click-outside=(action 'close')
  on-select=on-select
  on-search=on-search
  on-searched=(action 'searched')
  search-slow-time=1000 as |sb|}}
  {{sb.input}}
  {{#if sb.isSearching}}
    {{#sb.option}}
      Please wait...
      {{if sb.isSlowSearch '(hold tight!)'}}
    {{/sb.option}}
  {{else}}
    {{#sb.options}}
      {{yield sb lastQuery}}
    {{/sb.options}}
  {{/if}}
{{/select-box}}