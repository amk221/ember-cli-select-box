<SelectBox
  @classNamePrefix="simple-select"
  @value={{@value}}
  @onPressKey={{this.pressedKey}}
  @onPressDown={{this.pressedDown}}
  @onPressUp={{this.pressedUp}}
  @onPressEscape={{this.close}}
  @onClickOutside={{this.close}}
  @onSelect={{fn this.selected @onSelect}}
  ...attributes as |sb|>
  {{yield (merge sb (hash
    SelectedOption=(component sb.SelectedOption onclick=sb.open))
  )}}
</SelectBox>