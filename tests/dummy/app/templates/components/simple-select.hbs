<SelectBox
  @classNamePrefix="simple-select"
  @value={{@value}}
  @on-press-alphanum={{action "pressedAlphaNum"}}
  @on-press-down={{action "pressedDown"}}
  @on-press-up={{action "pressedUp"}}
  @on-press-escape={{action "close"}}
  @on-click-outside={{action "close"}}
  @on-select={{action "selected" @on-select}}
  @on-update={{action "updateDisplayLabel"}} as |sb|>
  <sb.selectedOption @click={{sb.open}}>
    {{#if this.displayLabel}}
      {{this.displayLabel}}
    {{else}}
      &nbsp;
    {{/if}}
  </sb.selectedOption>
  <sb.options>
    {{yield sb}}
  </sb.options>
</SelectBox>