<SelectBox
  @classNamePrefix="simple-select"
  @value={{@value}}
  @onPressKey={{action "pressedKey"}}
  @onPressDown={{action "pressedDown"}}
  @onPressUp={{action "pressedUp"}}
  @onPressEscape={{action "close"}}
  @onClickOutside={{action "close"}}
  @onSelect={{action "selected" @onSelect}}
  ...attributes as |sb|>
  {{yield (merge sb (hash
    SelectedOption=(component sb.SelectedOption onclick=sb.open))
  )}}
</SelectBox>