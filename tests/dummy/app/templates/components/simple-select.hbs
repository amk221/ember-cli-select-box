<SelectBox
  @classNamePrefix="simple-select"
  @value={{@value}}
  @onPressKey={{action "pressedKey"}}
  @onPressDown={{action "pressedDown"}}
  @onPressUp={{action "pressedUp"}}
  @onPressEscape={{action "close"}}
  @onClickOutside={{action "close"}}
  @onSelect={{action "selected" @onSelect}}
  @onUpdate={{action "updateDisplayLabel"}} as |sb|>
  <sb.Focuser />
  <sb.SelectedOption onclick={{sb.open}}>
    {{#if this.displayLabel}}
      {{this.displayLabel}}
    {{else}}
      &nbsp;
    {{/if}}
  </sb.SelectedOption>
  <sb.Options>
    {{yield sb}}
  </sb.Options>
</SelectBox>