{{#select-box
  class-prefix='simple-select'
  value=value
  is-open=isOpen
  on-press-down=(action 'pressedDown')
  on-press-up=(action 'pressedUp')
  on-press-escape=(action 'close')
  on-click-outside=(action 'close')
  on-select=(action 'selected' on-select)
  on-update=(action 'updateDisplayLabel') as |sb|}}
  {{#sb.selected-option click=sb.open}}
    {{#if displayLabel}}
      {{displayLabel}}
    {{else}}
      &nbsp;
    {{/if}}
  {{/sb.selected-option}}
  {{#if sb.isOpen}}
    {{#sb.options}}
      {{yield sb}}
    {{/sb.options}}
  {{/if}}
{{/select-box}}