<p>
  Demonstration of a native select box, that can have non-primitive values. Useful for assigning Ember Data models to each option.
  <a href="https://github.com/zestia/ember-select-box/blob/master/tests/dummy/app/templates/native-single-select.hbs">template.hbs</a>
</p>

<NativeSelectBox
  @value={{this.selectedDessert}}
  @on-select={{action "selectedDessert"}} as |sb|>
  <sb.group @label="Cakes">
    {{#each this.selectableCakes as |cake|}}
      <sb.option @value={{cake}}>
        {{cake.name}}
      </sb.option>
    {{/each}}
  </sb.group>
  <sb.group @label="Puddings">
    {{#each this.selectablePuddings as |pudding|}}
      <sb.option @value={{pudding}}>
        {{pudding.name}}
      </sb.option>
    {{/each}}
  </sb.group>
</NativeSelectBox>


<p>
  Selected dessert: {{this.selectedDessert.name}}
</p>