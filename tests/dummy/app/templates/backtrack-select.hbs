<SelectBox
  class="backtrack-select"
  @onFocusLeave={{this.handleFocusLeave}}
  @onSelect={{this.handleSelect}}
  ...attributes as |sb|
>
  {{#if sb.value}}
    {{sb.value}}
  {{else}}
    <sb.Input />
  {{/if}}

  <sb.Option @value="1">One</sb.Option>
  <sb.Option @value="2">Two</sb.Option>
  <sb.Option @value="3">Three</sb.Option>
</SelectBox>