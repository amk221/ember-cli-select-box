<p>
  <a href="https://github.com/zestia/ember-select-box/blob/master/tests/dummy/app/components/search-select.js">Demonstration</a>
  of faux select box that runs before displaying available options.
</p>

{{#search-select
  on-search=(action "findBread")
  on-select=(action "selectedBread") as |sb newBread|}}
  {{#each selectableBreads as |bread|}}
    {{#sb.option value=bread}}
      {{bread.name}}
    {{/sb.option}}
  {{else}}
    {{#sb.option click=(action "addNewBread" newBread)}}
      No bread found<br>
      Add {{newBread}}...
    {{/sb.option}}
  {{/each}}
{{/search-select}}


<p>
  Selected bread: {{selectedBread.name}}
</p>

<p>
  New bread: {{newBread}}
</p>