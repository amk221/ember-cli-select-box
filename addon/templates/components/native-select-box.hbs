<select
  {{did-insert (action "_registerDomElement")}}
  class={{select-box-class @classNamePrefix}}
  multiple={{this.isMultiple}}
  onchange={{action "_onchange"}}

  {{! Issue: https://github.com/emberjs/rfcs/issues/497 }}
  aria-label={{@aria-label}}
  autofocus={{@autofocus}}
  disabled={{@disabled}}
  multiple={{@multiple}}
  name={{@name}}
  required={{@required}}
  size={{@size}}
  tabindex={{@tabindex}}
  title={{@title}}

  ...attributes>
  {{yield (hash
    Option=(component "native-select-box/option"
      classNamePrefix=@classNamePrefix
      _parentComponents=this.options
      _parentApi=this.api
      _parentIsMultiple=this.isMultiple
      _parentInternalValue=this.internalValue
      _onInit=(action "_registerOption")
      _onDestroy=(action "_deregisterOption")
      _onSelect=(action "select"))
    Group=(component "native-select-box/group"
      classNamePrefix=@classNamePrefix)
  )}}
</select>