<select
  {{did-insert (action "insertedElement")}}
  {{will-destroy (action "willDestroyElement")}}
  {{on "change" (action "change")}}
  class={{select-box-class @classNamePrefix}}
  multiple={{this.isMultiple}}

  ...attributes>
  {{yield (hash
    Option=(component "native-select-box/option"
      classNamePrefix=@classNamePrefix
      _parentComponents=this.options
      _parentApi=this.api
      _parentIsMultiple=this.isMultiple
      _parentInternalValue=this.internalValue
      _onInit=(action "initOption")
      _onDestroy=(action "destroyOption"))
    Group=(component "native-select-box/group"
      classNamePrefix=@classNamePrefix)
  )}}
</select>