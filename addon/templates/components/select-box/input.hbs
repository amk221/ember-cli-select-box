<input
  {{did-insert (action "handleInsertElement")}}
  {{will-destroy (action "handleDestroyElement")}}
  {{on "input" (action "handleInput")}}
  {{on "keydown" (action "handleKeyDown")}}
  aria-multiline="false"
  autocomplete="off"
  class={{concat this.className "__input"}}
  role="searchbox"
  type="text"

  {{! Issue: https://github.com/emberjs/rfcs/issues/497 }}
  aria-controls={{@aria-controls}}
  disabled={{@disabled}}
  onclick={{@onclick}}
  value={{@value}}

  ...attributes>