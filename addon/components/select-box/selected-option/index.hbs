<div
  data-component="selected-option"
  aria-current={{if this.isActive "true" "false"}}
  class={{this.className}}
  id={{this.id}}
  {{! Issue: https://github.com/emberjs/rfcs/issues/497 }}
  {{! template-lint-disable no-invalid-interactive no-positive-tabindex }}
  role={{if @role @role "option"}}
  onclick={{@onclick}}
  tabindex={{@tabindex}}
  ...attributes
  {{did-insert this.handleInsertElement}}
  {{did-update this.handleUpdateValue @value}}
  {{will-destroy this.handleDestroyElement}}
>
  {{~yield this.api~}}
</div>